<?xml version='1.0'?>
<list>
    <!--
        Available options:
            FOREGROUND - RRGGBB hex color
            BACKGROUND - RRGGBB hex color
            EFFECT_COLOR - RRGGBB hex color
            EFFECT_TYPE - number
                3 = strikethrough
            FONT_TYPE - number
                0 = normal
                1 = bold
                2 = italic
    -->
    <option name="GLSL.TYPE_SPECIFIER"><!-- int, vec4, sampler2D... -->
        <value>
            <option name="FOREGROUND" value="008080"/>
            <option name="FONT_TYPE" value="1"/>
        </value>
    </option>
    <option name="GLSL.QUALIFIER_TOKENS"><!-- in, writeonly, uniform, lowp... -->
        <value>
            <option name="FOREGROUND" value="0080FF"/>
            <option name="FONT_TYPE" value="1"/>
        </value>
    </option>
    <option name="GLSL.PRECISION_STATEMENT"><!-- precision mediump float; -->
        <value>
            <option name="FOREGROUND" value="004070"/>
            <option name="FONT_TYPE" value="2"/>
        </value>
    </option>
</list>
